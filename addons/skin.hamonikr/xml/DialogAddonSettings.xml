					<left>10</left>
					<top>120</top>
					<bottom>120</bottom>
					<width>350</width>
					<itemgap>5</itemgap>
					<pagecontrol>61</pagecontrol>
					<onleft>61</onleft>
					<onright>5</onright>
					<onup>3</onup>
					<ondown>20</ondown>
				</control>
				<!--settings level-->
				<control type="button" id="20">
					<left>10</left>
					<top>940</top>
					<height>60</height>
					<width>320</width>
					<texturefocus colordiffuse="white">backgrounds/white.png</texturefocus>
					<textcolor>white</textcolor>
